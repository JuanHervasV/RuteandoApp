<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ruteandoporscharff"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".Login">

    <TextView
        android:id="@+id/infotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="270dp"
        android:fontFamily="@font/carnasbold"
        android:text="¡habla!'"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/usuusu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/infotext"
        android:layout_marginStart="52dp"
        android:layout_marginTop="40dp"
        android:text="usuario"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/carnasbold"
        />


    <EditText
        android:id="@+id/editText_login_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/usuusu"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:autofillHints=""
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/carnasthin"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:text="RutAdmin"

        android:textColor="@color/black" />

    <TextView
        android:id="@+id/usupw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_login_username"
        android:layout_centerVertical="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:text="contraseña"
        android:fontFamily="@font/carnasbold"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText_login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usupw"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:autofillHints=""
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/carnasthin"
        android:hint="@string/prompt_password"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:text="9549549"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/button_login_login"
        android:layout_width="183dp"
        android:layout_height="70dp"
        android:layout_below="@+id/editText_login_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/iniciarsesion"
        android:fontFamily="@font/carnasthin"
        android:onClick="onClick"
        android:textColor="@color/white" />


</RelativeLayout>