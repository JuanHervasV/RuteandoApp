<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/cornerrecylcer"
        >

        <ImageView
            android:id="@+id/idImagen"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@drawable/retratodemo"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"/>

        <TextView
        android:id="@+id/idNombre"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/idImagen"
        android:layout_toRightOf="@+id/idImagen"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/carnasbold"/>

        <TextView
            android:id="@+id/cargo"
            android:layout_below="@+id/idNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="colaborador de Scharff"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/idImagen"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:fontFamily="@font/carnasthin"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_toStartOf="@+id/estatico"
            android:layout_toEndOf="@+id/idNombre"
            android:layout_alignParentTop="true"
            android:src="@drawable/separador" />

        <TextView
            android:id="@+id/idDescrip"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textSize="20dp"
            android:layout_toStartOf="@+id/estatico"
            android:layout_marginRight="59dp"
            android:textStyle="bold"
            android:fontFamily="@font/carnasbold"/>

        <TextView
            android:id="@+id/estatico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idDescrip"
            android:fontFamily="@font/carnasbold"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="puntos"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </RelativeLayout>

    </androidx.cardview.widget.CardView>

